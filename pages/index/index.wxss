/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx 0 100rpx 0;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.input-section {
  width: 580rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  margin-top: 0rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.text-input {
  width: 100%;
  height: 260rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  position: relative;
  z-index: 1;
}

.divider {
  text-align: center;
  color: #999;
  margin: 30rpx 0;
  font-size: 24rpx;
}

.image-upload {
  height: 60rpx;
  width: 100%;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #ddd49f;
}

.preview-image {
  position: absolute;
  top: -100rpx;
  left: -10rpx;
  width: calc(100% + 20rpx);
  height: 400rpx;
  border-radius: 8rpx;
  z-index: 2;
  object-fit: cover;
}

.upload-text {
  font-size: 28rpx;
  color: rgb(95, 90, 90);
}

.button-group {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin: 20rpx;
}

.generate-btn {
  flex: 1;
  min-height: 50rpx;
  line-height: 50rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx 50rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.copy-btn {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  background: #8bd0f8;
  color: #333;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.result-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
